class Average {
	public void fun1() {
		int x = 20;
		int y = 40;
		int z = ((x+y)/2);
		System.out.println("x is " + x);
		System.out.println("y is " + y);
		System.out.println("average of x and y is z = " + z);
		System.out.println("------------------");

	}

	public void fun2(int x, int y) {
				int z = (x+y)/2;
			System.out.println("x is " +x);
			System.out.println("y is " +y);
			System.out.println("average of x and y = " +z);
			System.out.println("------------------" );

		}
	
	public int fun3(int x,int y) {
		int z=(x+y)/2;
	System.out.println("x is " +x);
	System.out.println("y is " +y);

	
	return z;
	
	
	
}
	public int fun4() {
		int x = 100;
		int y = 200;
		int z = (x + y)/2;
	System.out.println("x is " +x);
	System.out.println("y is " +y);
	System.out.println("------------------" );
	return z;
	
}
}

	
